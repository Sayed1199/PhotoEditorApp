<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#264EC4" />
            <gradient android:angle="-90" android:startColor="#1076E1" android:endColor="#DD0F49"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#C42655" />
            <solid android:color="#7C1349"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="20dip" />
            <gradient android:angle="-180" android:startColor="#2196F3" android:endColor="#C1153B" />
        </shape>
    </item>
</selector>